<h1>Listing shiurs</h1>

<table>
  <thead>
    <tr>
      <th>Magid</th>
      <th>Category</th>
      <th>Subcat</th>
      <th>Name</th>
      <th>Description</th>
      <th>Location link</th>
      <th>Shiur date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shiurs.each do |shiur| %>
      <tr>
        <td><%= shiur && shiur.magid ? shiur.magid.name : 'No name chosen' %></td>
        <td><%= shiur.category.name %></td>
        <td><%= shiur.subcat.name %></td>
        <td><%= shiur.name %></td>
        <td><%= shiur.description %></td>
        <td><%= shiur.location_link %></td>
        <td><%= shiur.shiur_date %></td>
        <td><%= link_to 'Show', shiur %></td>
        <td><%= link_to 'Edit', edit_shiur_path(shiur) %></td>
        <td><%= link_to 'Destroy', shiur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shiur', new_shiur_path %>
